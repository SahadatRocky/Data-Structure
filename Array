#include<iostream>
using namespace std;
void print(int arr[10],int n);
void Reverse(int arr[10],int n);
int Insert(int arr[10],int n);
int Delete(int arr[10],int n);
void highest(int arr[10],int n);
void lowst(int arr[10],int n);

void lowest(int arr[10],int n)
{

int Min;

   Min=arr[0];

   for(int i=0;i<n;i++)
   {
       if(arr[i]<Min)
       {
             Min=arr[i];
       }
   }
  cout<<"lowest value is:"<<Min;


}
void highest(int arr[10],int n)
{

   int Max;

   Max=arr[0];

   for(int i=0;i<n;i++)
   {
       if(arr[i]>Max)
       {
             Max=arr[i];
       }
   }
  cout<<"hight value is:"<<Max;


}
int Delete(int arr[10],int n)
{

        int pos;
        cout<<"which number of position to delete your value :";
        cin>>pos;

    pos--;

    for(int i=pos;i<=n-2;i++)
    {
        arr[i]=arr[i+1];
    }

    n--;

    return n;




}
int Insert(int arr[10],int n)
{
    int item,pos;

    cout<<"user plz add your item number :";
        cin>>item;

        cout<<"which number of position to add your value :";
        cin>>pos;

    pos--;

    for(int i=n-1;i>=pos;i--)
    {
        arr[i+1]=arr[i];
    }
    arr[pos]=item;
    n++;

    return n;
}
void Reverse(int arr[10],int n)
{
     cout<<endl;
    for(int i=n-1;i>=0;i--)
    {
        cout<<"arr["<<i<<"]"<<"->"<<" "<<arr[i]<<endl;
    }
}
void print(int arr[10],int n)
{

    cout<<endl;
    for(int i=0;i<n;i++)
    {
        cout<<"arr["<<i<<"]"<<"->"<<" "<<arr[i]<<endl;
    }
}

int main()
{
    int arr[10],n,i;

    cout<<"entrer the number is:?n=:";
    cin>>n;

    cout<<"user plz enter your values :"<<endl;

    for(i=0;i<n;i++)
    {
        cout<<i+1<<".";
        cin>>arr[i];
    }

    print(arr,n);

    Reverse(arr,n);

    n=Insert(arr,n);

     print(arr,n);


    n=Delete(arr,n);

     print(arr,n);

   highest(arr,n);
   lowest(arr,n);

    return 0;

}

